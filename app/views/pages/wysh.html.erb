<div ng-controller="AuthCtrl" ng-show="auth.isLoggedIn()">
  <div class="ui one column page grid">
    <div class="four wide column">
      <div class="ui piled segment">
        <h1 class="ui header">
          <i class="list icon"></i> My Wyshes
        </h1>

        <div class="ui divider"></div>

        <div class="filters">

          <div class="ui selection dropdown">
            <div class="text">Sort By</div>
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item" data-value="0">Price (ascending)</div>
              <div class="item" data-value="1">Price (descending)</div>
              <div class="item" data-value="2">Wyshes (ascending)</div>
              <div class="item" data-value="3">Wyshes (descending)</div>
              <div class="item" data-value="4">Newest First</div>
              <div class="item" data-value="5">Oldest First</div>
            </div>
          </div>

          <div class="ui selection dropdown">
            <div class="text">Price Range</div>
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item" data-value="1">Cheap</div>
              <div class="item" data-value="0">Expensive</div>
            </div>
          </div>

          <div class="ui selection dropdown">
            <div class="text">Date Range</div>
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item" data-value="1">Date</div>
            </div>
          </div>

          <div class="ui icon search-field input right floated">
            <input type="text" placeholder="Filter..">
            <i class="search link icon"></i>
          </div>

        </div>

        <div class="ui divider"></div>

        <div ng-controller="WyshesCtrl">
          <div>
          <div deckgrid source="wyshedFilteredItems"
               cardTemplate="/templates/wysh_card"
               class="deckgrid clearfix"></div>
          </div>

          <%= render partial: 'items/add_to_event_modal' %>
          <%= render partial: 'items/item_details' %>
        </div>
      </div>

    </div>
  </div>
</div>
